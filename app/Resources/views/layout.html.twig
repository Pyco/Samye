{# app/Resources/views/layout.html.twig #}
<!DOCTYPE html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}Share and Manage Your Events{% endblock %}</title>

        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/style1.css') }}" type="text/css" />
        <link rel="stylesheet" href="{{ asset('css/login.css') }}" type="text/css" />		
		<link rel="stylesheet" href="{{ asset('js/fullcalendar/fullcalendar.css') }}" type="text/css" />
		{% endblock %}
    </head>
    <body>    
	    <div id="body">
	        <div id="header">
	            <div id="topHeader">
	                <div id="logo">
	                    <a href="{{ path('samye_index') }}"><img src="{{ asset('img/logo2.png') }}" alt="" /></a>
	                </div>
	                <div id="menu">
		               <ul class="menu">
		              		{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
							<li><a href="{{ path('samye_evt') }}"><span>événements</span></a></li>
		               		<li><a href="#" class="parent"><span>Les Groupes</span></a>
		                   	<div><ul>
		                    	<li><span><a href="{{ path('samye_categories') }}">Liste des catégories</a></span></li>
		                        <li><span><a href="{{ path('samye_add_category') }}">Créer une catégorie</a></span></li>
		                        <li><span><a href="{{ path('samye_users') }}">Liste des groupes</a></span></li>
		                    </ul></div>
		                   </li>
		                   <li class="last"><a href="#"><span>Boîte à outils</span></a></li>
		                        
		                  </li>
		                  {% endif %}	
		                </ul>
		        	</div>
	            </div>
	            <div id="profilBar">
	          	{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
	            	<span class="user">{{ app.user.username }}</span>
	            	<a href="{{ path('fos_user_security_logout') }}" class="profilBarIcon"><img src="{{ asset('img/logout.png') }}" alt="" /></a>
	            	<a href="{{ path('fos_user_profile_show') }}" class="profilBarIcon"><img src="{{ asset('img/edit.png') }}" alt="" /></a>
	            	<a href="" class="profilBarIcon"><img src="{{ asset('img/event.png') }}" alt="" /></a>
	            	<a href="" class="profilBarIcon"><img src="{{ asset('img/email.png') }}" alt="" /></a>	            
	            {% endif %}
	            </div>	
	            
	        </div>
			<div class=clear></div>							
			<div id=contentAlign>
				{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}   
		        <div id="content" class="span9">
		        {% else %}
		        <div id="contentNoLog" class="span9">		        
		        {% endif %}		        
		        	{% block body %}
		        	{% endblock %}
		        </div>
		    </div>
			<div class=clear></div>	
	        <div id="footer">
	        	Created by MC-Koala le MC de tous les Koalas
	        </div>
        </div>
    
        {% block javascripts %}
			{# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
			<script type="text/javascript" src="{{ asset('js/jquery.js') }}"></script>			
			<script type="text/javascript" src="{{ asset('js/scripts.js') }}"></script>
			<script type="text/javascript" src="{{ asset('js/fullcalendar/fullcalendar.min.js') }}"></script>
			{% block jsCal %}
			{% endblock %}
		{% endblock %}
    </body>
</html>