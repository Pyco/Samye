{% extends "SamyeEvtBundle::layout.html.twig" %}
 
{% block title %}
  Evénements - {{ parent() }}
{% endblock %}
 
{% block body %}

	<h2>Liste des catégories</h2>
		<a id="button" href="{{ path('samye_add_category')}}">Ajouter catégorie</a>

	
	<table class="events">
		<th>Catégorie</th><th></th>
		{% for category in categories %}
		<tr>
			
			<td>{{ category.libelle }}</td>

			<td class="iconsCell">
				<a href="{{ path('samye_modify_category',{'id':category.id}) }}"><img class="icons" src="{{ asset('img/pen.png') }}"  width="32px" height="32px"/></a>
				<a href="{{ path('samye_delete_category',{'id':category.id}) }}"><img class="icons" src="{{ asset('img/bin.png') }}"  width="32px" height="32px"/></a>
			</td>
				
		</tr>
		{% endfor %}
	</table>
{% endblock %}