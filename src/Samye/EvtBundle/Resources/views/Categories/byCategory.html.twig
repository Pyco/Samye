{% extends "SamyeEvtBundle::layout.html.twig" %}
 
{% block title %}
  Evénements - {{ parent() }}
{% endblock %}
 
{% block body %}

	<h2>Liste des événéments - Catégorie : {{ cat.libelle }}</h2>

	<table class="events">
		<tr><th>Date</th><th>Heure</th><th>Evénement</th><th>Lieu</th><th>Statut</th><th></th></tr>
		{% for event in events %}
		<tr>
			<td class="date">{{ event.dateDeb|date('d/m/Y') }}</td>
			
			<td class="date"> {{ event.heureDeb|date('H:i')}} - {{ event.heureFin|date('H:i')}}</td>
			
			<td>{{ event.libelle }}</td>
			
			<td>{{ event.lieu }}</td>
			
			<td>{{ event.status().libelle }}</td>

			<td class="iconsCell">
				<a href="{{ path('samye_modify_event',{'id':event.id}) }}"><img class="icons" src="{{ asset('img/pen.png') }}"  width="32px" height="32px"/></a>
				<a href="{{ path('samye_delete_event',{'id':event.id}) }}"><img class="icons" src="{{ asset('img/bin.png') }}"  width="32px" height="32px"/></a>
			</td>
				
		</tr>
		{% endfor %}
	</table>
{% endblock %}